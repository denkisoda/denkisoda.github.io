<div class="admin-dashboard-container admin-container">

    <div class="admin-title">
        <h2>Posts</h2>
        <a href="/add_post" class="text-link">+ Add New</a>
      </div>
      
      <ul class="admin-posts">
      
        <% data.forEach(post => { %>
         
          <li>
            <a href="/post/<%= post._id %>" class="text-link">
              <%= post.title %>
            </a>

            <div class="admin-post-controls">

              <a href="/edit_post/<%= post._id %>" class="text-link">Edit</a>
      
              <form action="/delete_post/<%= post._id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn-delete text-link">
              </form>
      
            </div>
      
          </li>
      
        <% }) %>
      </ul>

</div>


